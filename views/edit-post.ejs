<%- include("./partials/header.ejs") %>

<main>
    <h2 class="page-title">Edit Post</h2>

    <!--Form for editing an existing post-->
    <div class="post-creation">
        <form action="/post/<%= post.urlFriendlyTitle %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="title">Game Title</label><br>
                <input class="form" type="text" id="title" name="title" value=" <%= post.title %>" required>
            </div>
            <div class="form-group">
                <label for="genre">Genre</label><br>
                <input class="form" type="text" id="genre" name="genre" value=" <%= post.genre %>" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label><br>
                <textarea class="form" type="text" id="description" name="description" maxlength="150" required><%= post.description %></textarea><br>
            </div>
                <div class="form-group">
                <label for="review">Your Review</label><br>
                <textarea class="form" type="text" name="review" required><%= post.review %></textarea>
            </div>
                
            <div class="form-buttons">
                <a href="/" class="body-btn red-btn form-btn">Cancel</a>
                <input class="body-btn form-btn" type="submit" id="submit" value="Update Post"> 
            </div>
        </form>
    </div>
</main>

<%- include("./partials/footer.ejs") %>
